%nested-fields{"data-id": "#{dom_id f.object}", "data-editor": true}
  = f.hidden_field :_destroy
  = f.hidden_field :id
  = f.hidden_field :data, {data:{editor_input: true}}
  %div{data:{editor:{container: true}}}
  = f.fields_for :children do |s|
    = render "admin/sections/nested_fields", f: s 
  = link_to_add_fields "Add child section", f, :children
